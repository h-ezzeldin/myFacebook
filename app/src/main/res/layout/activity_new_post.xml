<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NewPostActivity"
    android:orientation="vertical"
    android:padding="16dp">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/new_user_id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="new user id"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/new_title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="new title"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/new_body_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="new body"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"/>
    <TextView
        android:id="@+id/result_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>